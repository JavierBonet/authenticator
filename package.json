{
  "name": "authenticator",
  "version": "1.0.0",
  "description": "NodeJS authentication and authorization logic with a simple frontend",
  "main": "index.js",
  "repository": "https://github.com/JavierBonet/authenticator.git",
  "author": "Javier Bonet <javbonet@gmail.com>",
  "license": "MIT",
  "scripts": {
    "install-root": "yarn",
    "install-backend": "cd backend; yarn",
    "install-frontend": "cd frontend; yarn",
    "install-all": "npm-run-all --parallel install-root install-backend install-frontend",
    "start-backend": "cd backend; yarn start",
    "start-frontend": "cd frontend; yarn start",
    "start": "npm-run-all --parallel start-backend start-frontend"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6"
  }
}
